<div class="center">
	<h1>Items you have sold</h1>
</div>

<table id="sellertable" class="table table-striped table-bordered">
	<tr>
		<th class="center">Product Image</th>
		<th class="center">Product Name</th>
		<th class="center">Product Price</th>
		<th class="center">Customer Info</th>
		<th class="center">Date Item Sold</th>
	</tr>

	<% @orders.each do |order| %>
		<tr>
			<td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
			<td class="center"><%= order.listing.name %></td>
			<td class="center"><%= number_to_currency(order.listing.price) %></td>
			<td class="center"><%= order.buyer.name %></td>
			<td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
		</tr>
	<% end %>
</table>


<% if user_signed_in? %>
	<%= link_to 'New Listing', new_listing_path, class: "btn btn-default btn-xs", data: { no_turbolink: true }   %>
<% end %>
