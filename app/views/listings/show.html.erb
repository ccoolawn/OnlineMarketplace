

<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>
	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>
		<br>
		<%= link_to "Purchase", new_listing_order_path(@listing), class: "btn btn-default" %>
	</div>
</div>
<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-default btn-xs"  %> |
<% end%>
<%= link_to 'Back', listings_path, class: "btn btn-default btn-xs"  %>
<br>
