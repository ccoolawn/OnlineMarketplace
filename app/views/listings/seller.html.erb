<h1>Your Items for Sale</h1>

<table id="sellertable" class="table table-striped table-bordered">
	<tr>
		<th class="center">Product Image</th>
		<th class="center">Product Name</th>
		<th class="center">Product Description</th>
		<th class="center">Product Price</th>
		<th class="center">Action Items</th>
	</tr>

	<% @listings.each do |listing| %>
		<tr>
			<td><%= image_tag listing.image.url(:thumb) %></td>
			<td><%= listing.name %></td>
			<td><%= listing.name %></td>
			<td><%= number_to_currency(listing.price) %></td>
			<td>
				<div class="btn-group">
					<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Action items <span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
						<li><%= link_to 'View Listing', listing, class: "btn btn-link"  %></li>
						<li><%= link_to 'Edit Listing', edit_listing_path(listing), class: "btn btn-link"  %></li>
						<li><%= link_to 'Remove Listing', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></li>
					</ul>
				</div>
			</td>
		</tr>
	<% end %>
</table>


<% if user_signed_in? %>
	<%= link_to 'New Listing', new_listing_path, class: "btn btn-default btn-xs"  %>
<% end %>
